#tours
	.tour
		%h2= @tour.tour

		%p= @tour.place
		%p= @tour.description
		%p= @tour.price
		%p= @tour.date
		%p= @tour.duration
		%p= @tour.reservations
		%p= @tour.reviews
		
#links

	= link_to "Back", root_path, class: "btn btn-sm btn-default"
	= link_to "Edit", edit_tour_path(@tour) if can? :edit, Tour, class: "btn btn-sm btn-default"
	= link_to "Delete", tour_path(@tour), method: :delete, data: {confirm: "Are your sure?"} if can? :destroy, Tour, class: "btn btn-sm btn-default"